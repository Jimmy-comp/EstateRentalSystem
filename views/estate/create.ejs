<!--create.ejs-->
<form action="/estate/create" method="POST">
    <h4>Property Create Form</h4>
    <div class="row">
        <div class="col-md-6 col-sm-1">
            <div class="form-group">
                <label>Property title:</label>
                <input type="text" class="form-control" name="Estate[title]" required>
            </div>

            <div class="form-group">
                <label>Estate:</label><br>
                <select id="estate" class="form-control" name="Estate[estatename]">
                    <option value="National City">National City</option>
                    <option value="Central City">Central City</option>
                    <option value="Metropolis">Metropolis</option>
                    <option value="Gothan City">Gothan City</option>
                    <option value="Death City">Death City</option>
                </select>
            </div>

            <div class="form-group">
                <label>Gross Area:</label>
                <input type="number" class="form-control" name="Estate[area]" min="0" max="2000" required>
            </div>

            <div class="form-group">
                <label>Rent: </label>
                <input type="number" class="form-control" name="Estate[rent]" min="0" max="30000" required>
            </div>
        </div>

        <div class="col-md-6 col-sm-1">
            <div class="form-group">
                <label>Image URL:</label>
                <input type="text" class="form-control" name="Estate[url]" required>
            </div>

            <div class="form-group">
                <label>Bedrooms:</label>
                <input type="number" class="form-control" name="Estate[roomnum]" required>
            </div>

            <div class="form-group">
                <label>Expected Tenants:</label>
                <input type="number" class="form-control" name="Estate[tenants]" required>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="Estate[highlightprop]" value="true"><label
                    class="form-check-label">Highlighted Property</label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>